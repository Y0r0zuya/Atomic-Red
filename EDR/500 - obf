# Spawns 500 loud PowerShell windows with heartbeats ðŸ’“

$innerCommand = @"
while (`$true) {
    Write-Host 'ðŸ’“ LOUD ART TEST: $(Get-Date)' -ForegroundColor Red
    Start-Sleep -Seconds 1
}
"@

for ($i = 1; $i -le 500; $i++) {
    Write-Host "[$i] Spawning loud PS window..."
    Start-Process powershell.exe -ArgumentList "-NoExit", "-Command", $innerCommand
    Start-Sleep -Milliseconds 200
}
