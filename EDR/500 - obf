# Loop that spawns 500 noisy PowerShell heartbeats ðŸ’“

$payload = '& (gcm ''iex'') (''while($true){Write-Host \"ðŸ’“ LOUD ART TEST: ''$(Get-Date)''\" -ForegroundColor Red; Start-Sleep -Seconds 1}'')'

for ($i = 1; $i -le 500; $i++) {
    Write-Host "[$i] Spawning a LOUD window"
    Start-Process powershell.exe -ArgumentList "-NoExit", "-Command", $payload
    Start-Sleep -Milliseconds 200
}
