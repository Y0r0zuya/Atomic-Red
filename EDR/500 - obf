# EDR Heartbeat Spammer - 500 loud PS loops

$cmd = "powershell.exe -NoExit -Command `"& (gcm 'iex') ('while('+ '$'+'true'+'){Write-Host `"ðŸ’“ LOUD ART TEST: $(Get-Date)`" -ForegroundColor Red; Start-Sleep -Seconds 1}`)`""

for ($i = 1; $i -le 500; $i++) {
